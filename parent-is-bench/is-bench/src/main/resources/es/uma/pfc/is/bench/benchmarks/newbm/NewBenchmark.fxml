<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.uma.pfc.is.bench.benchmarks.newbm.NewBenchmarkController">
   <children>
      <GridPane alignment="CENTER" hgap="5.0" minHeight="400.0" minWidth="600.0" vgap="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
            <RowConstraints minHeight="10.0" vgrow="NEVER" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
            <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="NEVER" />
        </rowConstraints>
         <children>
            
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSaveButton" text="%btn.save" />
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClearButton" text="%btn.clear" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.rowIndex="1">
               <children>
                  <Label text="Name:" />
                  <TextField fx:id="txtName" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <StackPane alignment="CENTER_LEFT" GridPane.rowIndex="3">
               <children>
                  <Label text="%algorithms" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="NEVER">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="lbErrorMessages" style="-fx-border-color: red;" text="lbErrorMessages" textFill="#fc0909" visible="false" />
               </children>
            </StackPane>
            <HBox prefWidth="200.0" spacing="5.0" GridPane.rowIndex="4">
               <children>
                  <TextField fx:id="txtFilter" maxWidth="-Infinity" GridPane.hgrow="NEVER" GridPane.rowIndex="4" />
                  <Button mnemonicParsing="false" onAction="#handleNewAlgorithm" text="%btn.new" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.vgrow="ALWAYS">
               <children>
                  <ListView fx:id="algorithmsList" onMouseClicked="#handleListDoubleClick" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <ListView fx:id="algorithmsSelected" onMouseClicked="#handleSelectedListDoubleClick" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <TitledPane fx:id="inputsTitledPane" disable="true" GridPane.rowIndex="2">
               <content>
                  <VBox spacing="5.0">
                     <children>
                        <AnchorPane>
                           <children>
                              <SplitMenuButton fx:id="inputButton" mnemonicParsing="false" onAction="#handleSelectInputDir" prefHeight="25.0" prefWidth="114.0" text="Select Input" AnchorPane.leftAnchor="0.0">
                                <items>
                                  <MenuItem fx:id="fileOption" mnemonicParsing="false" onAction="#handleSelectInputDir" text="File" />
                                  <MenuItem fx:id="randomOption" mnemonicParsing="false" onAction="#handleGenerateSystem" text="Random" />
                                </items>
                              </SplitMenuButton>
                              <Label fx:id="lbSelectedFiles" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="119.0" nodeOrientation="RIGHT_TO_LEFT" text="5 seleccionados" textAlignment="RIGHT" AnchorPane.rightAnchor="0.0" />
                           </children>
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                        </AnchorPane>
                        <ListView fx:id="inputsList" disable="true" prefHeight="100.0" GridPane.rowIndex="3">
                           <contextMenu>
                              <ContextMenu fx:id="ctxMnuDeleteInput" onAction="#handleDeleteInputAction">
                                <items>
                                  <MenuItem mnemonicParsing="false" text="%item.remove" />
                                </items>
                              </ContextMenu>
                           </contextMenu></ListView>
                     </children>
                  </VBox>
               </content>
            </TitledPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </children>
</AnchorPane>
